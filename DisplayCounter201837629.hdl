CHIP DisplayCounter201837629 {
    IN inc, reset;  
    OUT a, b, c, d, e, f, g;

    PARTS:
    Register(in=nextCount, load=loadSignal, out=currentCount);
    Inc16(in=currentCount, out=incrementedCount);
    Mux16(a=incrementedCount, b[0..15]=false, sel=reset, out=nextCount);
    Xor(a=inc,b=reset,out=loadsignal);
    Or16(a=Q, b=false, out[3]=A, out[2]=B, out[1]=C, out[0]=D);

    // Temporary logic for testing
   Decode7 (A=A,B=B,C=C,D=D,a=a,b=b,c=c,d=d,e=e,f=f,g=g);  
}